= simple_form_for([@board, @card], remote: true) do |f|
  .modal-body
    = f.error_notification

    = hidden_field_tag :page, params[:page]
    = f.input :cta, as: :bootsy, editor_options: { alert_unsaved: false, html: true, lists: false, skip_parser: true }

  .modal-footer
    = f.button :submit
