.box-body
  %ul.todo-list
    = render(@campaigns) || alert('No advertising campaigns to show.')
.box-footer
  .pull-right
    %span.page_entries_info= page_entries_info @campaigns
    = paginate @campaigns, params: {controller: 'campaigns', action: 'index'}, remote: true
  .clearfix.margin-bottom
  .text-center= link_to 'Add a campaign', new_campaign_path, remote: true, class: 'btn btn-primary'
