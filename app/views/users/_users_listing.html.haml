.box-body
  %ul.todo-list
    = render(@users) || alert('No users to show.')
.box-footer
  .pull-right
    %span.page_entries_info= page_entries_info @users
    = paginate @users, params: {controller: 'users', action: 'index'}, remote: true
  .clearfix.margin-bottom
  .text-center= link_to 'Add a user', new_user_path, remote: true, class: 'btn btn-primary'
